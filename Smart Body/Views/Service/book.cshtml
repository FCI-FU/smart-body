@model Smart__Body.Models.DataPoint
@{
    ViewBag.Title = "book";
    Layout = "~/Views/shared/_layout.cshtml";
}

<div class="price_table container text-center">

    @for (int i = 0; i < @ViewBag.count; i++)
    {

        <div class="col-md-3 col-sm-4 col-xs-12">
