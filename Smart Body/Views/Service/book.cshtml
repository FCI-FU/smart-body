                <p class="center-block">@ViewBag.Pakcage[i].price$</p>
                <label>Package Name</label>
                <br />
                <span style="font-size:18px;">@ViewBag.Pakcage[i].name</span>
                <br />

                <label></label>
                <br />
                <span style="font-size:18px;">.......................................</span>
                <br />
                <br />
                <a href="@Url.Action("bookTrains", "services", new { id = @ViewBag.Pakcage[i].id })" class="btn btn-primary" style="padding: 10px 15px; margin-bottom: 7px;">Trainings</a>
                <a href="" class="btn btn-danger" style="padding: 10px 15px; margin-bottom:0px">Book</a>
            </div>
        </div>


    }

    
</div>



