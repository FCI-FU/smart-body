@{
    ViewBag.Title = "Ask";
}

<div class="container" style="min-height:90vh">
    <h2 class=" text-center">Messages</h2>
    <div class="messaging">
        <div class="inbox_msg">
            <div class="inbox_people">
                <div class="headind_srch">
                    <div class="recent_heading">
                        <h4>Recent</h4>
                    </div>
                </div>
                <div class="inbox_chat">
                    <div class="chat_list active_chat">
                        <a href="">
                            <div class="chat_people">
                                <div class="chat_img"> <img src="~/Images/user-profile.png" alt="sunil"> </div>
                                <div class="chat_ib">
                                    <h5>Sunil Rajput <span class="chat_date">Dec 25</span></h5>
                                    <p>
                                        Test Message
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="mesgs">
                <div class="msg_history">
                    @for (int i = 0; i < 10; i++)
                    {
                    <div class="incoming_msg">
                        <div class="incoming_msg_img"> <img src="~/Images/user-profile.png" alt="sunil"> </div>
                        <div class="received_msg">
                            <div class="received_withd_msg">
                                <p>
                                    Test Message
                                </p>
                                <span class="time_date"> 11:01 AM | June 9</span>
                            </div>
                        </div>
                    </div>
                    }
                    <div class="outgoing_msg">
                        <div class="sent_msg">
                            <p>
                                Test Message
                            </p>
                            <span class="time_date"> 11:01 AM | June 9</span>
                        </div>
                    </div>
                </div>
                <div class="type_msg">
                    <form action="" method="post">
                        <div class="input_msg_write">
                            <input type="text" class="write_msg" placeholder="Type a message" />
                            <button class="msg_send_btn" type="submit"><i class="fas fa-paper-plane" aria-hidden="true"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
