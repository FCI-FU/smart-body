@model Smart__Body.Models.DataPoint
@{
    ViewBag.Title = "Offers";
    Layout = "~/Views/Account/_profileLayout.cshtml";
}

<div class="price_table container text-center">

    @for (int i = 0; i < @ViewBag.count; i++)
    {

        <div class="col-md-3 col-sm-4 col-xs-12">
            <div class="price_box wow fadeInUp" data-wow-duration="2s">
                <form method="post" action="">
                    <button type="submit" class="close"><span aria-hidden="true" style="color:black;font-size:50px">&times;</span></button>
                </form>
                <form method="post" action="">
                    <button type="button" data-toggle="modal" data-target="#addOffer" class="close" style="padding-top:7px"><span aria-hidden="true" style="color:black;font-size:30px"><i class="fas fa-edit"></i></span></button>
                </form>
                <h2 class="text-primary">Offers</h2>
                <p class="center-block">@ViewBag.Pakcage[i].price$</p>
                <label>Package Name</label>
                <br />
                <span style="font-size:18px;">@ViewBag.Pakcage[i].name</span>
                <br />
                <br />
                <label>Description</label>
                <span style="font-size:18px;">,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,</span>
                <br />
                <label>Start date</label>
                
                <span style="font-size:18px;">11/7/2019</span>
                <label>End date</label>
               
                <span style="font-size:18px;">11/8/2019</span>
                <br />
                <br />
                 </div>
        </div>


    }

    <div class="col-md-3 col-sm-4 col-xs-12">
        <div class="price_box wow fadeInUp" data-wow-duration="2s" style="min-height:260px">
            <h2 class="text-primary">Add Offer</h2>
            <a><p class="center-block" data-toggle="modal" data-target="#addOffer">+</p></a>

        </div>
    </div>

</div>



<div class="modal fade" tabindex="-1" role="dialog" id="addOffer">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" style="color:black;font-size:50px">&times;</span></button>
                <h4 class="modal-title">New Offer details</h4>
            </div>
            <div class="modal-body">

                <div class="modal-body">
                    <form method="post" action="">
                        <fieldset style="border: none;" data-role="controlgroup" data-type="horizontal">
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon" style="width: 200px;">Parcintage value </span>
                                <input type="Number" class="form-control" placeholder="0%" aria-describedby="sizing-addon1" style="width: 350px;" />
                            </div>
                            <br />
                            <div class="input-group input-group-lg">
                                <div class="form-group">
                                    <span class="input-group-addon" style="width: 200px;">Start Date </span>
                                    <input type="Number" class="form-control" placeholder="0%" aria-describedby="sizing-addon1" style="width: 350px;" />
                                </div>

                            </div>
                            <br />
                            <div class="input-group input-group-lg">
                                <div class="form-group">
                                    <span class="input-group-addon" style="width: 200px;">End Date </span>
                                    <input type="Number" class="form-control" placeholder="0%" aria-describedby="sizing-addon1" style="width: 350px;" />
                                </div>
                            </div>
                            <br />
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon" style="width: 200px;">Description </span>
                                <input type="text" class="form-control" placeholder="............." aria-describedby="sizing-addon1" style="width: 350px;" />
                            </div>
                            <br />
                            <button id="btnAddBackage" class="btn btn-lg btn-primary btn-block">ADD Offer</button>
                        </fieldset>
                    </form>
                </div>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->